<!DOCTYPE HTML>
<html>
<head></head>
<body>
<script>
function formValidator()
{
	// Check each input in the order that it appears in the form!
	var fname=document.getElementById('firstname');
	var addrs=document.getElementById("addr");
	var zcode=document.getElementById("zip");
	var state=document.getElementById("state");
	var uname=document.getElementById("username");
	var email=document.getElementById("email");
	//document.getElementById("demo").innerHTML=fname;
	// Check each input in the order that it appears in the form!
	if(isAlphabet(fname,"Enter alphabets only"))
	{
	//document.getElementById("demo").innerHTML=aa;
		if(isalphanumeric(addrs,"alphanumeric only"))
		{
			if(isnumeric(zcode,"numbers only"))
			{
				if(madeSelection(state,"Please choose state"))
				{
					if(lengthRestrictor(uname,6,8,"check length"))
					{
						if(checkEmail(email,"not a valid address"))
						{
							return true;
						}
					}
				}	
			}			
		}
	}
	//document.getElementById("demo").innerHTML=bb;
return false;
}	
						
function isAlphabet(fname,msg)
{
	var regexp1=/^[a-zA-Z]+$/;
	if(fname.value.match(regexp1))
	return true;
	else{
	alert(msg)
	fname.focus();
	return false;
	}	
}
function isalphanumeric(addrs,msg)
{
	var regexp2=/^[0-9a-zA-Z]/;
	if(addrs.value.match(regexp2))
	return true;
	else{
	alert(msg)
	return false;
	}	
}
function isnumeric(zcode,msg)
{
	regexp3= /^[0-9]+$/;  //check for numeric value only   // /^\d{6}$/; (check for numeric(d means digit) as well as length should be 6)
	if(zcode.value.match(regexp3))
	return true;
	else{
	alert(msg)
	return false;
	}
}
function madeSelection(state,msg)
{
	if(state.value=="Please Choose"){
	alert(msg);
	return false;}
	else 
	return true;
}
function lengthRestrictor(uname,min,max,msg)
{
	var len=uname.value;
	if(len.length>=min && len.length<=max)
	return true;
else{
	alert(msg)
	return false;
	}
}
function checkEmail(elem,msg)
{
	var emailExp = /^[\w\-\.\+]+\@[a-zA-Z0-9\.\-]+\.[a-zA-z0-9]{2,4}$/;
	if(elem.value.match(emailExp)){
		return true;
	}else{
		alert(msg);
		elem.focus();
		return false;
	}
}


</script>
<form onsubmit='return formValidator()' >
First Name: <input type='text' id='firstname' /><br />
Address: <input type='text' id='addr' /><br />
Zip Code: <input type='text' id='zip' /><br />
State: <select id='state'>
	<option>Please Choose</option>
	<option>AL</option>
	<option>CA</option>
	<option>TX</option>
	<option>WI</option>
</select><br />
Username(6-8 characters): <input type='text' id='username' /><br />
Email: <input type='text' id='email' /><br />
<input type='submit' value='Check Form' />
</form>

<p id="demo"></p>

</body>
</html>
